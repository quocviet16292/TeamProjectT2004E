                        </div>
                    </div>


<!------------------------------Step 2-------------------------->
                        <div class="vbooking__step" id="step-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-9">
                                            <label>Select Service</label>
                                            <select name="service" class="form-control" id="service__select">
                                                <option value="1" class="service_name">Party Makeup</option>
                                                <option value="2" class="service_name">Wedding Makeup</option>
                                                <option value="3" class="service_name">Family Makeup</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3 step-2-nice-number">
                                            <label>How many persons?</label>
                                            <input type="number" class="form-control" min="0" id="qty__persons">
                                        </div>
                                    </div>
                                </div>
                            <hr>
