<!--                                    </div>-->
<!--                                </div>-->
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn btn-left" id="btn-step-2"><i class="fas fa-chevron-left"></i><span>    Back</span></button>
                                <button type="button" class="btn btn-right" id="btn-step-2"><span>Next  </span><i class="fas fa-chevron-right"></i></button>
                                <div style="clear: both;"></div>
                            </div>
                        </div>
                    </div>

<!------------------------------Step 3-------------------------->

