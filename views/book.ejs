                    <div class="vbooking__step" id="step-4">
                        <div class="col-md-12">
                            <h3 class="step-4__title">Booking Summary</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <h3>Service For :</h3>
                                    <p id="getname"></p>
                                    <h3>Phone Number :</h3>
                                    <p id="getphone"></p>
                                    <h3>Email :</h3>
                                    <p id="getemail"></p>
                                </div>
